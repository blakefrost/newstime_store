<div class="logo-container">
  <div class="newstime-logo">
    <a href="/">
      <%= render 'newstime_pendulum_logo' %>
    </a>
  </div>
</div>

<div class="top-bar">
  <input type="search" value="" placeholder="Search" name="" id="search"/>

  <div class="login-links">
    <% if current_organization %>
      <%= link_to current_organization.name, "/organization" %>
      &bull;
    <% end -%>

    <% if user_signed_in? %>
      <%= link_to current_user.username, "/account" %>
      &bull;
      <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %>
    <% else %>
      <%= link_to('Sign in', new_user_session_path)  %>
    <% end %>
  </div>

</div>
